<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_findorcreatelobby"
    tools:context="cs130project.encore.FindOrCreateLobby"
    android:orientation="vertical"
    android:background="@color/backgroundDark"
    >

    <cs130project.encore.RefreshableListViewWrapper
        android:id="@+id/refresh_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="50dp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:onClick="enterLobbyMaker"
        android:textSize="20sp"
        android:text="@string/createlobby"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        />

</LinearLayout>
