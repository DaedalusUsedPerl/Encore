<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_findorcreatelobby"
    tools:context="cs130project.encore.FindOrCreateLobby">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:background="#FFAAAAAA">

        <Switch
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:text="@string/show_private_lobbies"
            android:id="@+id/viewprivatelobbies"
            android:layout_weight="0"
            android:background="#FFCCCCCC"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="0dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="420dp">

            <cs130project.encore.RefreshableListViewWrapper
                android:id="@+id/refresh_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/button"
            android:onClick="enterLobbyMaker"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:text="@string/createlobby"
            android:textStyle="bold"
            android:textAlignment="center" />

    </LinearLayout>
</RelativeLayout>
