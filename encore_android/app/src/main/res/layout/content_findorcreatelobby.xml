<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_findorcreatelobby"
    tools:context="cs130project.encore.FindOrCreateLobby">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp">

        <Switch
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:text="@string/show_private_lobbies"
            android:id="@+id/viewprivatelobbies"
            android:layout_weight="0"
            android:background="#FFCCCCCC"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="0dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <cs130project.encore.RefreshableListViewWrapper
                android:id="@+id/refresh_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/button"
                android:onClick="enterLobbyMaker"
                android:textSize="20sp"
                android:background="@drawable/createlobbythin" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
