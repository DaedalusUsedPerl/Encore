<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login" tools:context="cs130project.encore.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/encorebackgroundnew2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/userpass"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginTop="0dp"
            android:paddingTop="165dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loginrdio"
                android:id="@+id/rdiologin"
                android:onClick="rdioLogin"
                android:textSize="20sp"
                android:background="#FF333333"
                android:textColor="#FFFFFFFF"
                android:layout_marginTop="0dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
